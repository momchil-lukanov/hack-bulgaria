package com.hackbulgaria.programming51.week8;

import java.util.Scanner;

public class Lakes {

	int counterDowns = 0;
	int counterHorizontals = 0;
	int counterUps = 0;
	int size;
	Character down = 'd';
	Character up = 'u';
	Character horizontal = 'h';

	public Lakes() {
	}

	public static void main(String[] args) {
		Lakes lakes = new Lakes();
		Scanner scanner = new Scanner(System.in);
		String input = scanner.next();
		
		for (int i = 0; i < input.length() + 1; i++) {
				if (input.charAt(i) == lakes.down) {
					lakes.counterDowns++;
					lakes.size += 500 + (lakes.counterDowns - 1) * 1000;
				} else if (input.substring(i, i + 1).equals(lakes.horizontal)) {
					lakes.counterHorizontals++;
					lakes.size += 1000 * lakes.counterDowns;
				} else if (input.substring(i, i + 1).equals(lakes.up)) {
					lakes.counterUps++;
					lakes.counterDowns--;
					lakes.size += 500 + lakes.counterDowns * 1000;
				}
			} else {
				if (input.substring(input.length()-1).equals(lakes.down)) {
					lakes.counterDowns++;
					lakes.size += 500 + (lakes.counterDowns - 1) * 1000;
				} else if (input.substring(input.length()-1).equals(lakes.horizontal)) {
					lakes.counterHorizontals++;
					lakes.size += 1000 * lakes.counterDowns;
				} else if (input.substring(input.length()-1).equals(lakes.up)) {
					lakes.counterUps++;
					lakes.counterDowns--;
					lakes.size += 500 + lakes.counterDowns * 1000;
				}
			}
		}

		System.out.println(lakes.size);
	}

}
