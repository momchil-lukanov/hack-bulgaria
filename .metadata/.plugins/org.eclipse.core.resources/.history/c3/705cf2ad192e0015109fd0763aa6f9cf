package com.hackbulgaria.programming51.week5a;

import java.util.ArrayList;

public class Word {
	
	public static ArrayList<String> createArrayListOfStrings(char[][] map){
		ArrayList<String> temp = null;
		int counter = 0;
		for (int i = 0; i < map.length; i++) {
			String result = "";
			for (int j = 0; j < map.; j++) {
				result += map.get(i).get(j);
			}
			temp.add(result);
		}
		for (int i = 0; i < map.size(); i++) {
			String result = "";
			for (int j = map.get(i).size()-1; j >= 0; j--) {
				result += map.get(i).get(j);
			}
			temp.add(result);
		}
		return temp;

		
	}


}
