package com.hackbulgaria.programming51.week6;

public class Main {

	public static void main(String[] args) {
		Weapon w = new Axe();
		System.out.println(w.getDurability());
		for (int i = 0; i < 30; i++) {
			w.hit();
			System.out.println(w.getDurability());
			System.out.println(w.getDamage());
		}
		System.out.println(w.getType());
		Weapon a = new Weapon(10,23);
		System.out.println(a.getDurability());
		a.hit();
		System.out.println(a.getDurability());
	}

}
